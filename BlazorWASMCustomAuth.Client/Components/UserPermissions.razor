<MudTable Items="@userPermissions" Hover="true">
    <HeaderContent>
        <MudTh>Overwrite</MudTh>
        <MudTh>Deny/Allow Toggle</MudTh>
        <MudTh>Application Name</MudTh>
        <MudTh>Permission Name</MudTh>
        <MudTh>Permission Description</MudTh>        
        <MudTh>In Roles</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="PermissionSwitchEnabled">
            <MudSwitch Color="Color.Success" Disabled="!_AccessEdit" @bind-Checked="@context.IsEnabled" @oninput="(e)=>TogglePermissionEnabledSwitch(e,context.Id, context.Overwrite)" />
        </MudTd>
        <MudTd DataLabel="PermissionSwitchAllow">
            <MudSwitch Color="Color.Success" @bind-Checked="@context.Overwrite" @oninput="(e)=>TogglePermissionAllowSwitch(e,context.Id)" Disabled=@(!context.IsEnabled) UnCheckedColor="MudBlazor.Color.Error" />
        </MudTd>
        <MudTd DataLabel="Application Name">@context.ApplicationName</MudTd>
        <MudTd DataLabel="Permission Name">@context.PermissionName</MudTd>
        <MudTd DataLabel="Permission Description">@context.PermissionDescription</MudTd>
        <MudTd DataLabel="Roles">@context.Roles</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager PageSizeOptions="new int[]{50, 100}" />
    </PagerContent>
</MudTable>