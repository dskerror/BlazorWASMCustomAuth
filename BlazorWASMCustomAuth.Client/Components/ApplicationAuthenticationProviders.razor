@using BlazorWASMCustomAuth.Security.Shared;
@using System.Security.Claims;

@if (!_loaded)
{
    <h3>Loading...</h3>
    <MudProgressLinear Color="Color.Primary" Striped="true" Size="Size.Large" Value="75" Class="my-7" />
}

<MudTable Elevation="25" RowsPerPage="5" ServerData="@(new Func<TableState, Task<TableData<ApplicationAuthenticationProviderDto>>>(ServerReload))" Hover="true" Dense="true" Bordered="true" Striped="true" @ref="_table">
    <ToolBarContent>
        @if (_AccessApplicationAuthenticationProviderCreate)
        {
            <div class="justify-center mud-text-align-center">
                <MudButton DisableElevation Variant="Variant.Filled" OnClick="@(() => CreateAuthenticationProvider())" StartIcon="@Icons.Material.Filled.Create" IconColor="Color.Surface" Color="Color.Primary">Create Authentication Provider</MudButton>
            </div>
        }
        <MudSpacer />
        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel T="ApplicationAuthenticationProviderDto" SortLabel="Name">Name</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="ApplicationAuthenticationProviderDto" SortLabel="AuthenticationProviderType">Type</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="ApplicationAuthenticationProviderDto" SortLabel="Domain">Domain</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel T="ApplicationAuthenticationProviderDto" SortLabel="Username">Username</MudTableSortLabel></MudTh>
        <MudTh>Details</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="AuthenticationProviderName">
            <MudHighlighter Text="@context.Name" HighlightedText="@_searchString" />
        </MudTd>
        <MudTd DataLabel="AuthenticationProviderType">
            <MudHighlighter Text="@context.AuthenticationProviderType" HighlightedText="@_searchString" />
        </MudTd>
        <MudTd DataLabel="Domain">
            <MudHighlighter Text="@context.Domain" HighlightedText="@_searchString" />
        </MudTd>
        <MudTd DataLabel="Username">
            <MudHighlighter Text="@context.Username" HighlightedText="@_searchString" />
        </MudTd>
        <MudTd DataLabel="Details">
            <MudIconButton OnClick="() => ViewAuthenticationProvider(context.Id)"
                           Icon="@Icons.Material.Filled.Edit"
                           Color="Color.Primary"
                           Variant="Variant.Filled">
            </MudIconButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager PageSizeOptions="new int[]{5, 10, 50, 100}" />
    </PagerContent>
</MudTable>