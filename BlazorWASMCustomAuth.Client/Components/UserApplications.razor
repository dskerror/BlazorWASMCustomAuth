
<MudTable Items="@userApplications" Hover="true">
    <HeaderContent>
        <MudTh>Disabled/Enabled</MudTh>
        <MudTh>Application Name</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ApplicationSwitch">
            @if (context.UserId == 1 && context.ApplicationId == 1)
            {
                <MudSwitch Color="Color.Success" Disabled="true" @bind-Checked="@context.UserEnabled" @oninput="(e)=>ToggleApplicationSwitch(e,context.ApplicationId)" />
            }
            else
            {
                <MudSwitch Color="Color.Success" Disabled="!_AccessEdit" @bind-Checked="@context.UserEnabled" @oninput="(e)=>ToggleApplicationSwitch(e,context.ApplicationId)" />
            }

        </MudTd>
        <MudTd DataLabel="ApplicationName">@context.ApplicationName</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager PageSizeOptions="new int[]{50, 100}" />
    </PagerContent>
</MudTable>
