@page "/PasswordChange/{PasswordChangeGuid}"
@layout LoginLayout
@attribute [AllowAnonymous]

<EditForm Model="model" OnValidSubmit="ChangePassword">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <MudCard Class="mb-2">
        <MudCardContent>

            <MudTextField Label="Password" @bind-Value="model.Password"
                          For="@(()=>model.Password)"
                          InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility">
            </MudTextField>
        </MudCardContent>
    </MudCard>
    <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Class="mb-2">Change Password</MudButton>
</EditForm>