@page "/usercreate"

<h3><NavLink href="/users">Users</NavLink> > Create User</h3>

<EditForm Model="model" OnValidSubmit="Create">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <MudCard Class="mb-2">
        <MudCardContent>
            <MudTextField Label="Email" @bind-Value="model.Email"
                          For="@(()=>model.Email)">
            </MudTextField>
            <MudTextField Label="Name" @bind-Value="model.Name"
                          For="@(()=>model.Name)">
            </MudTextField>

            <MudTextField Label="Password" @bind-Value="model.Password" For="@(() => model.Password)"
                          InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" />

        </MudCardContent>
    </MudCard>

    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </div>
</EditForm>